<!DOCTYPE html>
<html>
<head>
  <title>CodeSnippet</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid form-50">
    <%= link_to "Home", root_path %> |
    <%= link_to "CSS", language_snippets_path(3) %> |
    <%= link_to "HTML", language_snippets_path(2) %> |
    <%= link_to "Javascript", language_snippets_path(4) %> |
    <%= link_to "Ruby", language_snippets_path(1) %> ||
    <%= link_to "New Language", new_language_path %> ||
  </div>
  <div class="container-fluid form-50">
      <%= yield %>
  </div>
</body>
</html>
